{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [ "es2020" ],
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [ "./node_modules/@types", "./src/@types" ],
    "allowImportingTsExtensions": true,
    "noEmit": true
  }, 
  "include": [ "src/**/*" ]
}
